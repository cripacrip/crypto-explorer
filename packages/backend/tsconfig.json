{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // Must be "commonjs" for Node.js to treat as CommonJS
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Allows mixing ESM and CommonJS
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}